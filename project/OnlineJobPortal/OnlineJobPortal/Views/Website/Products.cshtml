@model IEnumerable<OnlineJobPortal.Models.product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
}

<h1>All Products</h1>

<div class="row">
    
    @foreach(var data in Model)
    {
        <div class="col-sm-3">
            <div class="card w-100">
                
                <img src="~/product/@data.image" style="height: 150px;" class="card-img-top" />
                <h5>@data.name</h5>
                <h5>Price: @data.price </h5>
                <p>
                    @data.description
                </p>



                <a class="btn btn-warning" asp-action="ProductDetails" asp-route-id="@data.id">View Details</a>

            </div>
        </div>
            
    }

</div>