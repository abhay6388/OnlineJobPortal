@{
    Layout = "_WebsiteLayout";

}

<h1>Order Now</h1>

<form method="post" asp-action="OrderNow">
    Enter Your Form
    <input type="text" class="form-control"name="name" />
    <br/>
    Enter Your Mobile
    <input type="text" class="form-control" name="mobile" />
    Enter Your Email
    <input type="text" class="form-control"name="email"/>
    <br/>
    Enter Your PinCode
    <input type="text" class="form-control" name="pincode" />
    <br/>
    Enter Your Address
    <textarea name="address" class="form-control"></textarea>
    <br/>
    Product Name
    <input type="text" class="form-control" value="@Model.name" readonly />
    <br/>
    Product Price
    <input type="text" class="form-control" value="@Model.name" readonly/>
    <br/>

    <input name="id" value="@Model.id"type="hidden"/>

    Select Payment Mode
    <input type="radio" value="cod" name="paymentmode"/>
    Cash On Delivery
    <br/>
    <input type="radio" value="Online" name="paymentmode"/>
    Onilne


    <br/> <br/>

    <button class="btn btn-primary">Order Now</button>
</form>
