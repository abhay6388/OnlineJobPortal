@model OnlineJobPortal.Models.product

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
}

<h1>Product Details</h1>

<div class="row">

    <div class="col-sm-6">
        <img src="~/product/@Model.image" class="w-100"/>

    </div>

    <div class="col-sm-6">
        <h2>@Model.name</h2>
        <p>@Model.description</p>
        <h5>Discount:5%</h5>
        <h3>Price:₹@Model.price</h3>
        <a class="btn btn-success" asp-action="BuyNow" asp-route-id="@Model.id">Buy Now</a>
       
        <a class="btn btn-warning">AddToCard</a>
    </div>
</div>
