@model OnlineJobPortal.Models.singleorder
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .invoice-box {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            background-color: #fff;
            font-size: 16px;
            line-height: 24px;
            color: #555;
        }

            .invoice-box h1 {
                font-size: 24px;
                margin-bottom: 10px;
            }

            .invoice-box h2 {
                font-size: 18px;
                margin-bottom: 20px;
            }

            .invoice-box table {
                width: 100%;
                line-height: inherit;
                text-align: left;
            }

                .invoice-box table td {
                    padding: 5px;
                    vertical-align: top;
                }

                .invoice-box table tr td:nth-child(2) {
                    text-align: right;
                }

                .invoice-box table tr.top table td {
                    padding-bottom: 20px;
                }

                    .invoice-box table tr.top table td.title {
                        font-size: 45px;
                        line-height: 45px;
                        color: #333;
                    }

                .invoice-box table tr.information table td {
                    padding-bottom: 40px;
                }

                .invoice-box table tr.heading td {
                    background: #eee;
                    border-bottom: 1px solid #ddd;
                    font-weight: bold;
                }

                .invoice-box table tr.details td {
                    padding-bottom: 20px;
                }

                .invoice-box table tr.item td {
                    border-bottom: 1px solid #eee;
                }

                .invoice-box table tr.item.last td {
                    border-bottom: none;
                }

                .invoice-box table tr.total td:nth-child(2) {
                    border-top: 2px solid #eee;
                    font-weight: bold;
                }

        footer {
            margin-top: 20px;
            text-align: center;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="invoice-box">
        <table>
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="title">
                                <h1>Invoice</h1>
                            </td>
                            <td>
                                Invoice #: 123<br>
                                Date: October 18, 2024<br>
                                Due: November 18, 2024
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <h1>Abdevelopers</h1>
                                <h1>Product</h1>
                        </tr>
                        <tr>
                            <td>@Model.name</td>
                            <td>@Model.productname</td>
                            <td>@Model.email</td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="heading">
                <td>Item</td>
                <td>Price</td>
            </tr>

            <tr class="item">
                <td>Website Design</td>
                <td>$300.00</td>
            </tr>

            <tr class="item">
                <td>Hosting (3 months)</td>
                <td>$75.00</td>
            </tr>

            <tr class="item">
                <td>Domain Name (1 year)</td>
                <td>$10.00</td>
            </tr>

            <tr class="item last">
                <td>Maintenance</td>
                <td>$50.00</td>
            </tr>

            <tr class="total">
                <td></td>
                <td>Total: $435.00</td>
            </tr>
        </table>
    </div>

    <footer>
        <p>Thank you for your business!</p>
        <p>Contact us: contact@company.com | +1 800 123 4567</p>
    </footer>
</body>
</html>
