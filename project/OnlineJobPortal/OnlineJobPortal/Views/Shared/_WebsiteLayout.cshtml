<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Online Job Potal </title>

    <!-- Bootstrap Linking -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sweet Alert Linking -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @RenderSection("head", false)

</head>
<body>

    <div class="container-fluid">

        <!-- Header Row  -->
        <div class="row">
            <div class="col-sm-12 p-0">

                <nav class="navbar navbar-expand-lg" style="background-color: #e3f2fd;">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">Navbar</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="AdminLogin" asp-controller="Website" >Admin Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Register" asp-controller="Website">Register</a>
                                </li>

                                @if (TempData["loginstatus"] != null)
                                {
                                    @if (TempData["loginstatus"].ToString() == "true")
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="Profile" asp-controller="Website">Profile</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="Login" asp-controller="Website">Login</a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Login" asp-controller="Website">Login</a>
                                    </li>
                                }

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Categories
                                    </a>
                                    <ul class="dropdown-menu">
                                        @RenderSection("categories", false)
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                                </li>
                            </ul>
                            <form class="d-flex" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>
                        </div>
                    </div>
                </nav>

            </div>
        </div>


        <!-- Main Content of View  -->
        <div class="row">
            <div class="col-sm-12">
                @RenderBody()
            </div>
        </div>

        <!-- Footer Row  -->
        <div class="row text-bg-secondary">
            <div class="col-sm-4">
                <h3>About Us</h3>
                <p>
                    DigiCoders is a Software Development Company in Lucknnow
                </p>
            </div>
            <div class="col-sm-4">
                <h3>Important Links </h3>

            </div>
            <div class="col-sm-4">
                <h3>Subscribe Newsletter</h3>
                <form>
                    <input type="email" class="form-control" />
                    <br/>
                    <button class="btn btn-danger">Subscribe</button>
                </form>

            </div>
        </div>
        <!-- Copyright Row  -->
        <div class="row">
            <div class="col-sm-12 p-3 text-bg-dark text-center">
                Copyright &copy; to DigiCoders Technologies
            </div>
        </div>

    </div>


    @RenderSection("script", false)

</body>
</html>



