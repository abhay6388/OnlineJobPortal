<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Admin Panel </title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <link href="//cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            let table = new DataTable(".mydatatable");

        })
    </script>

    @RenderSection("style", false)

    <style>
        .sidebar {
            min-height: 600px;
        }
        .nav-link {
            color: white;
        }
        .nav-link:hover {
            color: yellow;
        }
        .header {
            color: white;
        }
    </style>

</head>
<body>
    
    <div class="container-fluid" >

        <div class="row">


            <div class="col-sm-2 bg-dark sidebar">

                <nav class="nav flex-column">
                    <a class="nav-link" asp-action="Index" >Dashboard</a>
                    <a class="nav-link" asp-action="Slider" >Manage Slider </a>
                    <a class="nav-link" asp-action="Users" > Manage Users </a>
                    <a class="nav-link" asp-action="Category" > Manage Category </a>
                    <a class="nav-link" asp-action="Product" > Manage Product </a>
                    <a class="nav-link" asp-action="DeletedUsers" > Deleted Users </a>
                    <a class="nav-link" asp-action="Invoice">Invoice</a>
                    
                </nav>

            </div>  

            <div class="col-sm-10">

                <div class="row">
                    <div class="col-sm-12 bg-dark header p-2">
                        <h4 class="float-start">Admin Panel </h4>
                        <a class="btn btn-danger float-end" asp-action="Logout" asp-controller="Admin" >Logout</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        @RenderBody()
                    </div>
                </div>

            </div>

        </div>

    </div>


    @RenderSection("script", false)


</body>
</html>
